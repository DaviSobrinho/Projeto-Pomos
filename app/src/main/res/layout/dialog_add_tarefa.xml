<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_outline"
    android:padding="0dp">
    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/add_tarefa_dialog_textview_1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/add_tarefa"
                android:textColor="@color/dark_grey"
                android:textSize="24sp">
            </TextView>

            <ImageButton
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:id="@+id/add_tarefa_dialog_imagebutton_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/holo_red_dark"
                android:background="@color/transparent"/>
            <com.google.android.material.textfield.TextInputLayout
                app:hintTextColor="@color/dark_grey"
                android:textColorHint="@color/dark_grey"
                app:boxBackgroundColor="@color/light_green_grey"
                android:id="@+id/add_tarefa_dialog_textinputlayout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="75dp"
                app:boxCornerRadiusTopEnd="0dp"
                app:boxCornerRadiusBottomEnd="0dp"
                app:boxCornerRadiusBottomStart="0dp"
                app:boxCornerRadiusTopStart="15dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:maxLength="60"
                    android:id="@+id/add_tarefa_dialog_textinputedittext_1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Nome da tarefa:">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:backgroundTint="@color/light_green"
                android:background="@drawable/round_outline_top_right_only"
                android:layout_marginEnd="15dp"
                android:id="@+id/add_tarefa_dialog_imagebutton_2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@android:drawable/ic_menu_edit"
                app:layout_constraintTop_toTopOf="@id/add_tarefa_dialog_textinputlayout_1"
                app:layout_constraintStart_toEndOf="@+id/add_tarefa_dialog_textinputlayout_1"
                />

            <com.google.android.material.textfield.TextInputLayout
                app:hintTextColor="@color/dark_grey"
                android:textColorHint="@color/dark_grey"
                app:boxBackgroundColor="@color/light_green_grey"
                android:id="@+id/add_tarefa_dialog_textinputlayout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="145dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="75dp"
                app:boxCornerRadiusTopEnd="0dp"
                app:boxCornerRadiusBottomEnd="0dp"
                app:boxCornerRadiusBottomStart="0dp"
                app:boxCornerRadiusTopStart="15dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:maxLength="200"
                    android:id="@+id/add_tarefa_dialog_textinputedittext_2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Descrição:">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:backgroundTint="@color/light_green"
                android:background="@drawable/round_outline_top_right_only"
                android:layout_marginEnd="15dp"
                android:id="@+id/add_tarefa_dialog_imagebutton_3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@android:drawable/ic_menu_edit"
                app:layout_constraintTop_toTopOf="@id/add_tarefa_dialog_textinputlayout_2"
                app:layout_constraintStart_toEndOf="@+id/add_tarefa_dialog_textinputlayout_2"/>
            <LinearLayout
                android:id="@+id/add_tarefa_dialog_linearlayout_1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="220dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">
                <LinearLayout
                    android:id="@+id/add_tarefa_dialog_linearlayout_2"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:textColor="@color/dark_grey"
                        android:id="@+id/add_tarefa_dialog_textview_2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:textSize="13sp"
                        android:text="Prioridade:"
                        android:background="@drawable/round_outline_top_left_only"
                        android:backgroundTint="@color/light_green_grey"
                        android:gravity="center">
                    </TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/light_green_grey">
                        <ImageView
                            android:background="@color/transparent"
                            android:backgroundTint="@color/transparent"
                            android:id="@+id/add_tarefa_dialog_imageview_1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@mipmap/redtag_foreground">
                        </ImageView>
                    </LinearLayout>
                    <Spinner
                        android:background="@color/light_green_grey"
                        android:id="@+id/add_tarefa_dialog_spinner_2"
                        android:layout_weight="50"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Spinner>
                    <ImageButton
                        android:id="@+id/add_tarefa_dialog_imagebutton_5"
                        android:layout_weight="0"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_outline_top_right_only"
                        android:backgroundTint="@color/light_green"
                        app:tint="@color/dark_grey"
                        android:backgroundTintMode="src_atop"
                        android:src="@mipmap/down_arrow_foreground">
                    </ImageButton>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="295dp"
                android:id="@+id/add_tarefa_dialog_linearlayout_3"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                    app:hintTextColor="@color/dark_grey"
                    android:textColorHint="@color/dark_grey"
                    android:id="@+id/add_tarefa_dialog_textinputlayout_3"
                    app:boxBackgroundColor="@color/light_green_grey"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxCornerRadiusTopEnd="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50">
                    <com.google.android.material.textfield.TextInputEditText
                        android:hint="Quantidade de ciclos:"
                        android:textAlignment="center"
                        android:text="1"
                        android:inputType="number"
                        android:digits="1234567890"
                        android:id="@+id/add_tarefa_dialog_textinputedittext_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/add_tarefa_dialog_imagebutton_6"
                        android:rotation="180"
                        android:layout_weight="0"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/round_outline_bottom_left_only"
                        android:backgroundTint="@color/light_green"
                        app:tint="@color/dark_grey"
                        android:backgroundTintMode="src_atop"
                        android:src="@mipmap/down_arrow_foreground">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/add_tarefa_dialog_imagebutton_7"
                        android:layout_weight="0"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@color/light_green"
                        app:tint="@color/dark_grey"
                        android:src="@mipmap/down_arrow_foreground">
                    </ImageButton>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="370dp">
                <LinearLayout
                    android:layout_marginEnd="5dp"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <com.google.android.material.textfield.TextInputLayout
                        app:hintTextColor="@color/dark_grey"
                        android:textColorHint="@color/dark_grey"
                        android:layout_weight="50"
                        android:id="@+id/add_tarefa_dialog_textinputlayout_4"
                        app:boxBackgroundColor="@color/light_green_grey"
                        app:boxCornerRadiusTopStart="15dp"
                        app:boxCornerRadiusTopEnd="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:maxLength="5"
                            android:hint="Foco:"
                            android:textAlignment="center"
                            android:inputType="datetime"
                            android:digits="1234567890"
                            android:id="@+id/add_tarefa_dialog_textinputedittext_4"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageButton
                        android:layout_weight="100"
                        android:backgroundTint="@color/light_green"
                        android:background="@drawable/round_outline_top_right_only"
                        android:id="@+id/add_tarefa_dialog_imagebutton_4"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:srcCompat="@android:drawable/ic_menu_edit"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="5dp"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <com.google.android.material.textfield.TextInputLayout
                        app:hintTextColor="@color/dark_grey"
                        android:textColorHint="@color/dark_grey"
                        android:id="@+id/add_tarefa_dialog_textinputlayout_5"
                        android:layout_weight="50"
                        app:boxBackgroundColor="@color/light_green_grey"
                        app:boxCornerRadiusTopStart="15dp"
                        app:boxCornerRadiusTopEnd="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:maxLength="5"
                            android:layout_weight="50"
                            android:hint="Descanso:"
                            android:textAlignment="center"
                            android:inputType="datetime"
                            android:digits="1234567890"
                            android:id="@+id/add_tarefa_dialog_textinputedittext_5"
                            android:layout_width="match_parent"
                            android:layout_height="60dp">
                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageButton
                        android:layout_weight="100"
                        android:backgroundTint="@color/light_green"
                        android:background="@drawable/round_outline_top_right_only"
                        android:id="@+id/add_tarefa_dialog_imagebutton_8"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        app:srcCompat="@android:drawable/ic_menu_edit"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/add_tarefa_dialog_linearlayout_4"
                android:layout_marginTop="440dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_tarefa_dialog_materialbutton_1"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/light_green_grey"
                    android:text="@string/cancelar"
                    android:backgroundTint="@color/red"
                    app:cornerRadius="50dp"
                    android:layout_weight="50"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginEnd="5dp">
                </com.google.android.material.button.MaterialButton>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_tarefa_dialog_materialbutton_2"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/light_green_grey"
                    android:text="@string/criar_tarefa"
                    android:backgroundTint="@color/light_green"
                    app:cornerRadius="50dp"
                    android:layout_weight="50"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp">
                </com.google.android.material.button.MaterialButton>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>