<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">
    <ImageView
        android:id="@+id/activity_main_imageview1"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/border_bottom_only">
    </ImageView>

    <TextView
        android:background="@drawable/border"
        android:textColor="@color/dark_grey"
        android:inputType="number"
        android:digits="1234567890:"
        android:id="@+id/activity_main_text_view_1"
        android:layout_width="250dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="25:00"
        android:textSize="80sp"
        android:layout_marginTop="160dp"
        android:gravity="center">
    </TextView>
    <com.google.android.material.button.MaterialButton
        app:cornerRadius="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:backgroundTint="@color/dark_grey"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        android:gravity="center">
    </com.google.android.material.button.MaterialButton>
    <com.google.android.material.button.MaterialButton
        app:cornerRadius="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:backgroundTint="@color/dark_grey"
        android:textColor="@color/light_grey"
        android:id="@+id/activity_main_materialbutton_4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="TAREFA EM EXECUÇÃO: Nenhuma"
        android:textSize="19sp"
        android:layout_marginTop="80dp"
        android:gravity="center">
    </com.google.android.material.button.MaterialButton>
    <ImageView
        android:id="@+id/activity_main_imageview3"
        android:scaleX="1.4"
        android:scaleY="1.2"
        android:rotation="270"
        app:tint="@color/dark_grey"
        android:src="@mipmap/play_foreground"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="@id/activity_main_imageview1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_main_text_view_1"
        android:layout_marginTop="160dp">

    </ImageView>

    <ImageView
        android:id="@+id/activity_main_imageview4"
        android:scaleX="1.4"
        android:scaleY="1.2"
        app:tint="@color/dark_grey"
        android:rotation="90"
        android:src="@mipmap/play_foreground"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="@id/activity_main_imageview1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/activity_main_text_view_1"
        android:layout_marginTop="220dp">

    </ImageView>
    <ImageButton
        android:id="@+id/activity_main_imagebutton_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:background="@color/light_grey"
        android:src="@mipmap/menu_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/dark_grey">
    </ImageButton>
    <TextView
        android:background="@drawable/border"
        android:id="@+id/recyclerview_activity_main_textview_1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/dark_grey"
        android:textAlignment="center"
        android:text="POMOS"
        android:textSize="28sp">
    </TextView>
    <ImageButton
        android:id="@+id/activity_main_imagebutton_2"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/light_grey"
        android:src="@mipmap/settings_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/dark_grey">
    </ImageButton>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_main_materialbutton_2"
        app:backgroundTint="@color/dark_grey"
        android:textColor="@color/holo_green_light"
        app:cornerRadius="50dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Iniciar"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_marginTop="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="130dp">

    </com.google.android.material.button.MaterialButton>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/activity_main_materialbutton_3"
        app:backgroundTint="@color/dark_grey"
        android:textColor="@color/red"
        android:textSize="15sp"
        app:cornerRadius="50dp"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Reiniciar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_marginTop="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="130dp">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:background="@drawable/border"
        app:backgroundTintMode="add"
        android:textColor="@color/dark_grey"
        android:id="@+id/activity_main_materialbutton_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:elevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="50dp">
    </com.google.android.material.button.MaterialButton>

    <ImageView
        android:contentDescription="@string/add_tarefa"
        android:clickable="true"
        android:id="@+id/activity_main_imageview2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/transparent"
        android:elevation="10dp"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintStart_toStartOf="@id/activity_main_materialbutton_1"
        app:layout_constraintTop_toTopOf="@id/activity_main_materialbutton_1"
        app:tint="@color/holo_blue_dark">
    </ImageView>
    <TextView
        android:id="@+id/activity_main_textview_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_materialbutton_1"
        app:layout_constraintTop_toTopOf="@id/activity_main_materialbutton_1"
        app:layout_constraintStart_toEndOf="@id/activity_main_imageview2"
        android:text="@string/add_tarefa"
        android:elevation="10dp"
        android:textColor="@color/dark_grey"
        android:textSize="18sp">
    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_main_recyclerview_1"
        app:layout_constraintTop_toBottomOf="@id/activity_main_materialbutton_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="440dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>