<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/recyclerview_activity_main_imagebutton_1"
        android:scaleY="0.7"
        android:scaleX="0.7"
        android:background="#00000000"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/more_foreground">

    </ImageButton>
    <com.google.android.material.button.MaterialButton
        android:stateListAnimator="@null"
        app:rippleColor="@color/light_grey"
        android:backgroundTint="@color/white"
        android:textColor="@color/grey"
        android:id="@+id/recyclerview_activity_main_materialbutton_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:elevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="50dp">
    </com.google.android.material.button.MaterialButton>
    <ImageView
        android:contentDescription="@string/add_tarefa"
        android:clickable="true"
        android:id="@+id/recyclerview_activity_main_imageview_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        android:src="@drawable/redflag_foreground"
        app:layout_constraintStart_toStartOf="@id/recyclerview_activity_main_materialbutton_1"
        app:layout_constraintTop_toTopOf="@id/recyclerview_activity_main_materialbutton_1">
    </ImageView>
    <TextView
        android:id="@+id/recyclerview_activity_main_textview_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="50dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="@id/recyclerview_activity_main_materialbutton_1"
        app:layout_constraintTop_toTopOf="@id/recyclerview_activity_main_materialbutton_1"
        app:layout_constraintStart_toEndOf="@id/recyclerview_activity_main_imageview_1"
        android:text="@string/nome_tarefa"
        android:elevation="10dp"
        android:textColor="@color/grey"
        android:textSize="18sp">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>